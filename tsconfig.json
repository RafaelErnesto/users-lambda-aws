{
    "compilerOptions": {
      "target": "es2019",                          
      "module": "commonjs",                    
      "lib": ["es6"],  
      "moduleResolution": "node",                   
      "allowJs": true,
      "outDir": "build",                          
      "rootDir": "src",
      "strict": false,   
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "**/*.spec.ts"]
}